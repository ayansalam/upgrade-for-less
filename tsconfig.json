    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "lib": ["DOM", "ESNext"],
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["api/**/*"]
}
